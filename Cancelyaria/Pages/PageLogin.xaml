<Page x:Class="Cancelyaria.Pages.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid Background="#f5f5f5">
        <Border Background="White" Padding="20" CornerRadius="10" Width="350" Height="300"
                VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="#cccccc" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

                <TextBlock Text="Логин:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLogin" Height="30" />

                <TextBlock Text="Пароль:" Margin="10,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" />

                <Button Content="Войти" Height="35" Margin="0,20,0,5"
                        Click="BtnLogin_Click" Background="#2196F3" Foreground="White"/>

                <Button Content="Регистрация" Height="30" Click="BtnRegister_Click"
                        Background="Transparent" BorderBrush="Transparent" Foreground="#2196F3"/>
                
            </StackPanel>
            
        </Border>
    </Grid>
</Page>
