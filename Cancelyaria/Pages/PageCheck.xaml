<Page x:Class="Cancelyaria.Pages.PageCheck"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCheck">
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <TextBlock Text="Спасибо за покупку!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

        <TextBlock x:Name="txtReceipt" FontSize="16" TextWrapping="Wrap" Margin="0,0,0,20" TextAlignment="Center"/>

        <Image x:Name="imgBarcode" Width="300" Height="100" Margin="0,0,0,20"/>
        <Image x:Name="imgQRCode" Width="200" Height="200"/>
        <Button Content="Выход" x:Name="BtnExit" Click="BtnExit_Click"></Button>
    </StackPanel>
   
</Page>
