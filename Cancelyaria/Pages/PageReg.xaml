<Page x:Class="Cancelyaria.Pages.PageReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReg">

    <Grid Margin="20" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>

            <TextBlock Text="Регистрация нового клиента" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

            <!-- Имя -->
            <Grid Margin="0,0,0,10">
                <TextBox x:Name="txtFirstName" />
                <TextBlock Text="Имя" 
                           Foreground="Gray" 
                           Margin="5,2,0,0" 
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           x:Name="placeholderFirstName"/>
            </Grid>

            <!-- Фамилия -->
            <Grid Margin="0,0,0,10">
                <TextBox x:Name="txtLastName" />
                <TextBlock Text="Фамилия" 
                           Foreground="Gray" 
                           Margin="5,2,0,0" 
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           x:Name="placeholderLastName"/>
            </Grid>

            <!-- Логин -->
            <Grid Margin="0,0,0,10">
                <TextBox x:Name="txtLogin" />
                <TextBlock Text="Логин" 
                           Foreground="Gray" 
                           Margin="5,2,0,0" 
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           x:Name="placeholderLogin"/>
            </Grid>

            <!-- Пароль -->
            <Grid Margin="0,0,0,10">
                <PasswordBox x:Name="txtPassword" />
                <TextBlock Text="Пароль" 
                           Foreground="Gray" 
                           Margin="5,2,0,0" 
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           x:Name="placeholderPassword"/>
            </Grid>

            <!-- Подтверждение пароля -->
            <Grid Margin="0,0,0,20">
                <PasswordBox x:Name="txtPasswordConfirm" />
                <TextBlock Text="Подтвердите пароль" 
                           Foreground="Gray" 
                           Margin="5,2,0,0" 
                           IsHitTestVisible="False"
                           VerticalAlignment="Center"
                           x:Name="placeholderPasswordConfirm"/>
            </Grid>

            <Button Content="Зарегистрироваться" Click="BtnRegister_Click" Height="35"/>

            <Button Content="Отмена" Click="BtnCancel_Click" Margin="0,10,0,0" Height="30" />
        </StackPanel>
    </Grid>
</Page>
