<Page x:Class="Cancelyaria.Pages.PageClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageClient">

    <Grid Margin="20">
        <StackPanel>

            
            <TextBlock x:Name="txtWelcome" FontSize="20" FontWeight="Bold" Margin="0,0,0,30" />

            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="Продукты" Width="150" Height="40" Click="BtnProduct_Click"/>
                <Button Content="Корзина" Width="150" Height="40" Click="BtnKorzina_Click"/>
                <Button Content="Выход" x:Name="BtnExit" Click="BtnExit_Click"></Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
