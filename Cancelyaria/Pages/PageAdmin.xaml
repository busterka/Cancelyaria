<Page x:Class="Cancelyaria.Pages.PageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAdmin">

    <Grid Background="#f0f0f0">
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20"
                BorderBrush="#cccccc" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Панель администратора" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" ItemHeight="40" ItemWidth="180" Margin="0,0,0,10">
                    <Button Content="PageMNF" Margin="1" Padding="10" Click="BtnMNF_Click"/>
                    <Button Content="PageProduct" Margin="1" Padding="10" Click="BtnProduct_Click"/>
                    <Button Content="PageSUPP" Margin="1" Padding="10" Click="BtnSUPP_Click"/>
                    <Button Content="PageUsers" Margin="1" Padding="10" Click="BtnUsers_Click"/>
                    <Button Content="PageProductEdit" Margin="1" Padding="10" Click="BtnProductEdit_Click"/>
                    <Button Content="Выход" Margin="1" Padding="10" Click="BtnExit_Click"/>
                </WrapPanel>

                <Frame x:Name="InnerFrame" NavigationUIVisibility="Hidden" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
