<Page x:Class="Cancelyaria.Pages.PageManajer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cancelyaria.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageManajer">

    <Grid Margin="20">
        <StackPanel>

            
            <TextBlock x:Name="txtWelcome" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

           
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Button Content="Редактировать товары" Width="150" Height="40" Click="BtnProductEdit_Click"/>
                <Button Content="Производители" Width="120" Height="40" Click="BtnMNF_Click"/>
                <Button Content="Поставщики" Width="120" Height="40" Click="BtnSUPP_Click"/>
                <Button Content="Выход" x:Name="BtnExit" Click="BtnExit_Click"></Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
